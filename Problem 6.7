for(i=0;i<=row;i++)
{
    for(j=0;j<=i;j++)
    {
        num=num+1;
        if(num%2==0)
        {
            printf("0\t");
        }
        else
        {
            printf("1\t");
        }
    }
    printf("\n");
}
